			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="/images/<%= datosUsuario.foto_perfil %>" alt="" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title">  <%= datosUsuario.username %>
