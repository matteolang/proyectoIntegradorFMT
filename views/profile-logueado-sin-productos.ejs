							<a href="/../profile-edit/">
								<i class="fas fa-cog"></i>
							</a>
						<% } %> 
						</h1>
						<% if(datosUsuario.id != user.id) { %> 
						<a class="btn mt-3 ml-4" href="">SEGUIR</a>
						<% } %> 
					</div>
					<div>
						<ul class="">
							<li><%= datosUsuario.email %></li>
							<li><%= datosUsuario.cantidad_de_productos %>  productos</li>
							<li><%= datosUsuario.seguidores %> seguidores</li>
							<li><%= datosUsuario.comentarios %> comentarios</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
