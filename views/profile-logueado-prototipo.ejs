			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show mis productos -->
				<% for(let i = 0; i < usuario[0].cantidadDeProductos; i++) { %> 
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="../product/id/<%= instrumentitos[i].id %>">
								<figure class="product-box_image">
									<img src="<%= instrumentitos[i].imagen%> " alt="">
								</figure>
								<article class="product-box_data">
									<h2><%= instrumentitos[i].nombreDelInstrumento + ' ' + instrumentitos[i].marca + ' ' + instrumentitos[i].modelo %> </h2>
									<p>Precio: Â£<%= instrumentitos[i].precio %></p>
									<p>Comentarios: <%= instrumentitos[i].comentarios.length %> </p>
								</article>
							</a>
						</section>
					</div>
				<% } %> 
			</div>
		</div>
