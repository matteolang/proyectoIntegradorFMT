<%-include("./parciales/header")%>


	<!-- Banner 
	<div class="banner">
		<img src="images/yamaha-banner.png" alt="Banner de ofertas">
	</div>-->
	<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
		<ol class="carousel-indicators">
		  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
		  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
		  <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
		</ol>
		<div class="carousel-inner">
		  <div class="carousel-item active">
			<img class="d-block w-100" class="fotobanner" src="/images/yamaha-banner.png" alt="">
		  </div>
		  <div class="carousel-item">
			<img class="d-block w-100" class="fotobanner" src="/images/ukeleles-banner.png" alt="">
		  </div>
		  <div class="carousel-item">
			<img class="d-block w-100" class="fotobanner" src="/images/hartke-banner.png" alt="">
		  </div>
		</div>
		<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		  <span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		  <span class="carousel-control-next-icon" aria-hidden="true"></span>
		  <span class="sr-only">Next</span>
		</a>
	  </div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i = 0; i < 4; i++) { %> 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="product/id/<%= masNuevos[i].id %>">
						<figure class="product-box_image">
							<img src="/images/<%= masNuevos[i].foto_product%> " alt="">
						</figure>
						<article class="product-box_data">
							<h2><%= masNuevos[i].nombre_producto + ' ' + masNuevos[i].marca + ' ' + masNuevos[i].modelo %> </h2>
							<p>Creado por: <%= masNuevos[i].creado_por %></p>
							<p>Precio: £<%= masNuevos[i].precio %></p>
							<p>Comentarios: <%= comentarios.length %> </p>
						</article>
					</a>
				</section>
			</div>
		<% } %> 
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i = 0; i < 4; i++) { %> 
				
					<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="product/id/<%= instrumentitos[i].id %> ">
							<figure class="product-box_image">
								<img src="/images/<%= instrumentitos[i].foto_product%> " alt="">
							</figure>
							<article class="product-box_data">
								<h2><%= instrumentitos[i].nombre_producto + ' ' + instrumentitos[i].marca + ' ' + instrumentitos[i].modelo %> </h2>
								<p>Creado por: <%= instrumentitos[i].creado_por %></p>
								<p>Precio: £<%= instrumentitos[i].precio %></p>
								<p>Comentarios: <%= comentarios.length %> </p>
							</article>
						</a>
					</section>
				</div>
			
			<% } %> 
		</div>
	</div>
	<!-- /Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más baratos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i = 0; i < masBaratos.length; i++) { %> 
				
					<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="product/id/<%= masBaratos[i].id %> ">
							<figure class="product-box_image">
								<img src="/images/<%= masBaratos[i].foto_product%> " alt="">
							</figure>
							<article class="product-box_data">
								<h2><%=masBaratos[i].nombre_producto + ' ' + masBaratos[i].marca + ' ' + masBaratos[i].modelo %> </h2>
								<p>Creado por: <%= masBaratos[i].creado_por %></p>
								<p>Precio: £<%= masBaratos[i].precio %>  </p>
								<p>Comentarios: <%= comentarios.length %> </p>
							</article>
						</a>
					</section>
				</div>
		
			<% } %> 
		</div>
	</div>


  <%- include("./parciales/footers") %>
</body>	
</html>