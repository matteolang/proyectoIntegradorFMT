<%-include("./parciales/header")%>

	<!-- Datos del usuario -->
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="/images/<%= user.foto_perfil %>" alt="" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title">  <%= user.username %>
							<a href="/../profile-edit/">
								<i class="fas fa-cog"></i>
							</a>
						</h1>
						<% if(datosUsuario.id != user.id) { %> 
							<a class="btn mt-3 ml-4" href="">SEGUIR</a>
							<% } %> 
					</div>
					<div>
						<ul class="">
							<li><%= user.email %></li>
							<li><%= productos.length %>  productos</li>
							<li><%= user.seguidores %> seguidores</li>
							<li><%= user.comentarios %> comentarios</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show mis productos -->
				<% for(let i = 0; i < productos.length; i++) { %> 
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="../product/id/<%= productos[i].id %>">
								<figure class="product-box_image">
									<img src="/images/<%= productos[i].foto_product%> " alt="">
								</figure>
								<article class="product-box_data">
									<h2><%= productos[i].nombre_producto + ' ' + productos[i].marca + ' ' + productos[i].modelo %> </h2>
									<p>Precio: Â£<%= productos[i].precio %></p>
									<p>Comentarios: <%= numeroComentarios.length %> </p>
								</article>
							</a>
						</section>
					</div>
				<% } %> 
			</div>
		</div>
    <%- include("./parciales/footers") %>
</body>	
</html>