<%-include("./parciales/header")%>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12">
				<form method="POST" class="register-form" action="/product/product-add">
					<div>
					<label for="nombre">Nombre de tu producto</label>
					<input type="text" id="nombre" name="nombre" placeholder="Nombre...">
					</div>
					<div>
						<label for="modelo">Modelo de tu producto</label>
						<input type="text" id="modelo" name="modelo" placeholder="Modelo...">
					</div>
					<div>
						<label for="marca">Marca de tu producto</label>
						<input type="text" id="marca" name="marca" placeholder="Marca...">
					</div>
	
					
	
				<div>
					<label for="foto">Imagen del producto</label>
					<input type="url" id="foto" name="foto" placeholder="URL de la imagen">
				</div>
				<div>
					<label for="descripcion">Descripción</label>
					<input type="text" id="descripcion" name="descripcion" placeholder="Descripción...">
				</div>
				<div>
					<label for="precio">Precio de tu producto en £</label>
					<input type="number" id="precio" name="precio" placeholder="Precio...">
					</div>
					<br>
					<button type="submit" class="boton">Añadir producto</button>
				</form>
			</h2>


            <%- include("./parciales/footers") %>
</body>

</html>