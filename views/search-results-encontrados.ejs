<%-include("./parciales/header")%>
<% //console.log(comentariosDeBuscados) %> 
	<!-- Novedades -->
	<% if(resultadoSearch != undefined) { %> 
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<% for(let i = 0; i < resultadoSearch.length; i++) { %> 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="product/id/<%= resultadoSearch[i].id %>">
						<figure class="product-box_image">
							<img src="/images/<%= resultadoSearch[i].foto_product%> " alt="">
						</figure>
						<article class="product-box_data">
							<h2><%= resultadoSearch[i].nombre_producto + ' ' + resultadoSearch[i].marca + ' ' + resultadoSearch[i].modelo %> </h2>
							<a href="/profile/<%= resultadoSearch[i].creador.id%>"><p>Creado por: <%= resultadoSearch[i].creador.username%> </p></a>
							<p>Precio: £<%= resultadoSearch[i].precio %> </p>
							<p>Comentarios: <%= resultadoSearch[i].comentarios.length %> </p>
						</article>
					</a>
				</section>
			</div>
		<% } %> 
		<% } else { %> 
			<div class="container products-wrapper">
				<div class="row">	
						<h2 class="producto-no-encontrado">No encontramos el producto que buscas. Intenta denuevo.</h2>
						</div>
			</div>
		<% } %> 
      <%- include("./parciales/footers") %>
</body>

</html>