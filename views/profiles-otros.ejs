<%-include("./parciales/header")%>
	<!-- Datos del usuario -->
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="/images/<%= datosUsuario.foto_perfil %>" alt="" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title"><%= datosUsuario.username %> 
							
						</h1>
						<a class="btn mt-3 ml-4" href="">SEGUIR</a>
					</div>
					<div>
						<ul class="">
							<li><%= datosUsuario.email %></li>
							<li><%= productos.length %>  productos</li>
							<li><%= datosUsuario.seguidores %> seguidores</li>
							<li><%= datosUsuario.comentarios %> comentarios</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Sus productos</h2>
				</div>
				<!-- Show mis productos -->
				<% for(let a = 0; a < productos.length; a++){ %> 
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="../product/id/<%= productos[a].id %>">
								<figure class="product-box_image">
									<img src="/images/<%= productos[a].foto_product%> " alt="">
								</figure>
								<article class="product-box_data">
									<h2><%= productos[a].nombre_producto + ' ' + productos[a].marca + ' ' + productos[a].modelo %> </h2>
									<p>Precio: Â£<%= productos[a].precio %> </p>
									<p>Comentarios: <%= numeroComentarios.length %> </p>
								</article>
							</a>
						</section>
					</div>
					<% } %> 
			</div>
		</div>
    <%- include("./parciales/footers") %>
</body>	
</html>