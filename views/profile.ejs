<%-include("./parciales/header")%>

	<!-- Datos del usuario -->

	<% if(usuarioClickeado == null) { %> 
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="https://via.placeholder.com/150" alt="foto de perfil" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title">Nombre del usuario 
							<a href="/../profile-edit">
								<i class="fas fa-cog"></i>
							</a>
						</h1>
						<a class="btn mt-3 ml-4" href="">SEGUIR</a>
					</div>
					<div>
						<ul class="">
							<li>8 productos</li>
							<li>200 seguidores</li>
							<li>300 comentarios</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show mis productos -->
				<% for(let i = 7; i < 15; i++) { %> 
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="../product/id/<%= instrumentitos[i].id %>">
								<figure class="product-box_image">
									<img src="<%= instrumentitos[i].imagen%> " alt="cafetera moulinex">
								</figure>
								<article class="product-box_data">
									<h2><%= instrumentitos[i].nombreDelInstrumento + ' ' + instrumentitos[i].marca + ' ' + instrumentitos[i].modelo %> </h2>
									<p>El instrumento se fabrico en la fecha <%= instrumentitos[i].fechaDeCreacion %> </p>
									<p>Comentarios: <%= instrumentitos[i].comentarios.length %> </p>
								</article>
							</a>
						</section>
					</div>
				<% } %> 
			</div>
		</div>
	<% } %> 
	<% if (usuarioClickeado != null) { %> 
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="https://via.placeholder.com/150" alt="foto de perfil" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title"><%= usuarioClickeado %> 
							<a href="/../profile-edit/<%= usuarioClickeado %> ">
								<i class="fas fa-cog"></i>
							</a>
						</h1>
						<a class="btn mt-3 ml-4" href="">SEGUIR</a>
					</div>
					<div>
						<ul class="">
							<li><%= usuario[0].cantidadDeProductos %>  productos</li>
							<li><%= usuario[0].seguidores %> seguidores</li>
							<li><%= usuario[0].comentarios %> comentarios</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show mis productos -->
				<% for(let i = 0; i < usuario[0].cantidadDeProductos; i++) { %> 
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="../product/id/<%= instrumentitos[i].id %>">
								<figure class="product-box_image">
									<img src="<%= instrumentitos[i].imagen%> " alt="cafetera moulinex">
								</figure>
								<article class="product-box_data">
									<h2><%= instrumentitos[i].nombreDelInstrumento + ' ' + instrumentitos[i].marca + ' ' + instrumentitos[i].modelo %> </h2>
									<p>El instrumento se fabrico en la fecha <%= instrumentitos[i].fechaDeCreacion %> </p>
									<p>Comentarios: <%= instrumentitos[i].comentarios.length %> </p>
								</article>
							</a>
						</section>
					</div>
				<% } %> 
			</div>
		</div>
	<% } %>  
	
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	
	<!-- /Mis productos -->


    <%- include("./parciales/footers") %>
</body>	
</html>